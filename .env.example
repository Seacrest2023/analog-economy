# Analog Economy Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/analog_economy
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# =============================================================================
# Redis Configuration (for caching/queues)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Blockchain Configuration
# =============================================================================
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
NOVELTY_TOKEN_CONTRACT=0x...
ITEMS_CONTRACT=0x...
LAND_CONTRACT=0x...

# Deployer wallet (KEEP SECRET)
DEPLOYER_PRIVATE_KEY=

# =============================================================================
# Gaian Configuration
# =============================================================================
GAIAN_CONFIG_PATH=./gaian/config.yaml
GAIAN_ETHICS_STRICT_MODE=true
GAIAN_AUDIT_LOG_PATH=/var/log/gaian/audit.log

# =============================================================================
# ML Pipeline Configuration
# =============================================================================
ML_PIPELINE_BATCH_SIZE=1000
ML_PIPELINE_EXPORT_PATH=/data/exports
ML_PIPELINE_RAW_PATH=/data/raw

# =============================================================================
# AWS Configuration (for S3, etc.)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=analog-economy-data

# =============================================================================
# Monitoring & Logging
# =============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# =============================================================================
# Security
# =============================================================================
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=http://localhost:3000,https://app.analogeconomy.com

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_UPRISING_BIOME=false
FEATURE_THEATER_BIOME=false
FEATURE_DATA_EXPORT=false
